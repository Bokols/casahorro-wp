{
  "version": "1.3.0",
  "project": "casAhorro",
  "updated": "2025-11-03",
  "description": "Design tokens for casAhorro WordPress theme. C1 neutral ink palette (#1E293B slate-800) with Dual-Accent system: pastel surfaces for backgrounds only, accent-ink for icons/illustrations only (never body text). Source: UI/UX System PRD v1.3.0 + C1 Specification.",
  "currency": {
    "code": "CLP",
    "symbol": "$",
    "format": "Thousands with dot separator, no decimals",
    "examples": ["$1.999.990", "$999.990", "$49.990"]
  },
  "metadata": {
    "c1_specification": {
      "primary_text": "#1E293B",
      "secondary_text": "#475569",
      "tertiary_text": "#64748B",
      "border_default": "#E2E8F0",
      "surface_alt": "#F8FAFC",
      "surface_base": "#FFFFFF",
      "description": "C1 neutrals replace all previous blues and legacy Phase-2 colors. All text, links, and interactive elements use C1 slate palette."
    },
    "dual_accent_usage": {
      "pastel_surfaces": {
        "allowed_uses": [
          "Section backgrounds (.section--pastel-*)",
          "Selected states (chips, tabs, pagination)",
          "Notice backgrounds (info, success, warning, error)",
          "Drawer/modal headers"
        ],
        "forbidden_uses": [
          "Body text or paragraph text",
          "Links or interactive text",
          "Any text smaller than 18px bold / 24px regular"
        ],
        "colors": {
          "mint": "#c9e5ea",
          "coral": "#f2ddda",
          "lavender": "#cec7ee",
          "sage": "#d9e8db",
          "cream": "#f6e7c8"
        }
      },
      "accent_ink": {
        "value": "#2A3D45",
        "formula": "color-mix(in srgb, #1E293B 78%, #d9e8db 22%)",
        "allowed_uses": [
          "SVG icon fills",
          "Decorative illustrations",
          "Close buttons in toasts/modals"
        ],
        "forbidden_uses": [
          "Body text, headings, or any readable content",
          "Interactive elements like buttons or links",
          "Form inputs or labels"
        ],
        "note": "Icons/illustrations ONLY. Never use for body text."
      }
    },
    "elementor_mapping": {
      "primary": "#1E293B",
      "secondary": "#475569",
      "text": "#1E293B",
      "accent": "#334155",
      "description": "Elementor global colors mapped to C1 neutrals to prevent non-token color injection."
    }
  },
